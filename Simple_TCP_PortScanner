import socket

# List of common ports
common_ports = [20, 21, 22, 23, 25, 53, 80, 110, 143, 443, 8080]

def port_scanner(target):
    try:
        ip = socket.gethostbyname(target)
    except socket.gaierror:
        print(f"‚ùå Could not resolve target: {target}")
        return

    print(f"\nüîç Scanning target: {target} ({ip})\n")

    for port in common_ports:
        try:
            with socket.socket(socket.AF_INET, socket.SOCK_STREAM) as sock:
                sock.settimeout(1.0)  # timeout 1 second
                result = sock.connect_ex((ip, port))
                if result == 0:
                    print(f"‚úÖ Port {port} is OPEN")
                else:
                    print(f"‚ùå Port {port} is CLOSED")
        except Exception as e:
            print(f"‚ö† Error scanning port {port}: {e}")

if __name__ == "__main__":
    target = input("Enter target IP or domain: ").strip()
    if target:
        port_scanner(target)
    else:
        print("No target provided. Exiting.")         give prfessional read me file about this project
